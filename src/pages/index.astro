  <script>
    const base = "/mpalaourg-astro";
    const slides = [
      { text: "I'm practically addicted to coffee!", bg: base + "/media/images/coffee.jpg" },
      { text: "I love traveling and visiting new places!", bg: base + "/media/images/travel.jpg" },
      { text: "Certified TV series geek!", bg: base + "/media/images/series.jpg" },
      { text: "An F1 superfan!", bg: base + "/media/images/f1.jpg" },
      { text: "My favorite music genre is rembetika!", bg: base + "/media/images/music.jpg" },
    ];

    let currentSlide = 0;
    const slider = document.getElementById('slider');
    const bgImage = document.getElementById('slider-bg');
    const content = slider?.querySelector('.text-center');
    const dots = document.querySelectorAll('.slider-dot');

    function showSlide(index) {
      currentSlide = index;
      if (bgImage) {
        bgImage.src = slides[index].bg;
      }
      if (content) {
        content.innerHTML = `<p class="text-2xl font-semibold text-white drop-shadow-lg">${slides[index].text}</p>`;
      }
      dots.forEach((dot, i) => {
        dot.classList.toggle('bg-slate-600', i === index);
        dot.classList.toggle('bg-slate-400', i !== index);
      });
    }

    dots.forEach(dot => {
      dot.addEventListener('click', () => {
        showSlide(parseInt(dot.getAttribute('data-index') || '0'));
      });
    });

    setInterval(() => {
      showSlide((currentSlide + 1) % slides.length);
    }, 10000);

    showSlide(0);

    // Joke refresh on click
    const jokeSection = document.getElementById('joke-section');
    const jokeImg = document.getElementById('joke-img');
    jokeSection?.addEventListener('toggle', () => {
      if (jokeSection.open) {
        jokeImg.src = `https://readme-jokes.vercel.app/api?theme=radical&t=${Date.now()}`;
      }
    });

    // Formula search and filter
    const formulaSearch = document.getElementById('formula-search');
    const formulaCards = document.querySelectorAll('.formula-card');
    const formulaTagButtons = document.querySelectorAll('.formula-tag');
    let currentTag = '';

    function filterFormula() {
      const searchTerm = (formulaSearch as HTMLInputElement)?.value?.toLowerCase() || '';
      
      formulaCards.forEach(card => {
        const title = card.getAttribute('data-title') || '';
        const tags = JSON.parse(card.getAttribute('data-tags') || '[]');
        
        const matchesSearch = title.includes(searchTerm);
        const matchesTag = currentTag === '' || tags.includes(currentTag);
        
        if (matchesSearch && matchesTag) {
          (card as HTMLElement).style.display = 'block';
        } else {
          (card as HTMLElement).style.display = 'none';
        }
      });
    }

    formulaSearch?.addEventListener('input', filterFormula);

    formulaTagButtons.forEach(tag => {
      tag.addEventListener('click', () => {
        const tagValue = tag.getAttribute('data-tag') || '';
        currentTag = currentTag === tagValue ? '' : tagValue;
        
        formulaTagButtons.forEach(t => {
          const tTag = t.getAttribute('data-tag') || '';
          if (tTag === currentTag && currentTag !== '') {
            t.classList.remove('bg-gray-200', 'dark:bg-slate-700', 'text-gray-700', 'dark:text-slate-300');
            t.classList.add('bg-blue-600', 'text-white');
          } else {
            t.classList.remove('bg-blue-600', 'text-white');
            t.classList.add('bg-gray-200', 'dark:bg-slate-700', 'text-gray-700', 'dark:text-slate-300');
          }
        });
        
        filterFormula();
      });
    });

    // Projects search and filter
    const projectsSearch = document.getElementById('projects-search');
    const projectCards = document.querySelectorAll('.project-card');
    const projectTagButtons = document.querySelectorAll('.project-tag');
    let currentProjectTag = '';

    function filterProjects() {
      const searchTerm = (projectsSearch as HTMLInputElement)?.value?.toLowerCase() || '';
      const isFiltering = searchTerm !== '' || currentProjectTag !== '';
      let visibleCount = 0;
      
      projectCards.forEach((card, index) => {
        const title = card.getAttribute('data-title') || '';
        const tags = JSON.parse(card.getAttribute('data-tags') || '[]');
        
        const matchesSearch = title.includes(searchTerm);
        const matchesTag = currentProjectTag === '' || tags.includes(currentProjectTag);
        
        if (matchesSearch && matchesTag) {
          if (!isFiltering && index >= 3) {
            (card as HTMLElement).style.display = 'none';
          } else if (visibleCount < 3) {
            (card as HTMLElement).style.display = 'block';
            visibleCount++;
          } else {
            (card as HTMLElement).style.display = 'none';
          }
        } else {
          (card as HTMLElement).style.display = 'none';
        }
      });
    }

    filterProjects();

    projectsSearch?.addEventListener('input', filterProjects);

    projectTagButtons.forEach(tag => {
      tag.addEventListener('click', () => {
        const tagValue = tag.getAttribute('data-tag') || '';
        currentProjectTag = currentProjectTag === tagValue ? '' : tagValue;
        
        projectTagButtons.forEach(t => {
          const tTag = t.getAttribute('data-tag') || '';
          if (tTag === currentProjectTag && currentProjectTag !== '') {
            t.classList.remove('bg-gray-200', 'dark:bg-slate-700', 'text-gray-700', 'dark:text-slate-300');
            t.classList.add('bg-blue-600', 'text-white');
          } else {
            t.classList.remove('bg-blue-600', 'text-white');
            t.classList.add('bg-gray-200', 'dark:bg-slate-700', 'text-gray-700', 'dark:text-slate-300');
          }
        });
        
        filterProjects();
      });
    });
