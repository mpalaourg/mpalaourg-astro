    <script>
      // Timeline arrow - follows scroll
      const timelineContainer = document.getElementById('timeline-container');
      const timelineArrow = timelineContainer?.querySelector('.timeline-arrow');
      
      function updateArrowPosition() {
        if (!timelineContainer || !timelineArrow) return;
        
        const containerRect = timelineContainer.getBoundingClientRect();
        
        // Calculate scroll progress through the container (0% = top, 100% = bottom)
        const scrollProgress = -containerRect.top;
        const totalHeight = containerRect.height;
        
        let percent = (scrollProgress / totalHeight) * 100;
        
        // Add offset - 3% at top, 15% when scrolling further down
        const baseOffset = percent < 10 ? 3 : 15;
        percent = Math.max(baseOffset, percent + baseOffset);
        percent = Math.min(100, percent);
        
        (timelineArrow as HTMLElement).style.top = `${percent}%`;
      }
      
      window.addEventListener('scroll', updateArrowPosition);
      window.addEventListener('resize', updateArrowPosition);
      updateArrowPosition();
    </script>

